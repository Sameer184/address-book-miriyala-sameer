<div class="container">
  <h1 class="mt-4">Edit Phone Number for <%= @person.first_name %> <%= @person.last_name %></h1>

  <%= form_for [@person, @phone_number] do |f| %>
    <div class="form-group">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :comment %>
      <%= f.text_area :comment, class: 'form-control', rows: 4 %>
    </div>

    <div class="form-group">
      <%= f.submit 'Update Phone Number', class: 'btn btn-success' %>
    </div>
  <% end %>

  <div class="mt-3">
    <%= link_to 'Back', person_phone_numbers_path(@person), class: 'btn btn-secondary' %>
  </div>
</div>
