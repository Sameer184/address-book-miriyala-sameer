<div class="container">
  <h1>New Address for <%= @person.first_name %> <%= @person.last_name %></h1>

  <%= form_for [@person, Address.new], html: { class: 'form' } do |f| %>
    <div class="form-group">
      <%= f.label :street %>
      <%= f.text_field :street, class: 'form-control', required: true %>
    </div>
    
    <div class="form-group">
      <%= f.label :town %>
      <%= f.text_field :town, class: 'form-control', required: true %>
    </div>
    
    <div class="form-group">
      <%= f.label :zip_code %>
      <%= f.text_field :zip_code, class: 'form-control', required: true, pattern: '\d+' %>
      <small class="text-muted">Enter numbers only.</small>
    </div>
    
    <div class="form-group">
      <%= f.label :state %>
      <%= f.text_field :state, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.label :country %>
      <%= f.select :country, @countries, { include_blank: 'Select Country' }, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= f.submit 'Submit', class: 'btn btn-success' %>
      <%= link_to 'Back to Addresses', person_addresses_path(@person), class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
