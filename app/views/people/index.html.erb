<div class="container mt-4">
  <h1>Address Book</h1>
  <br>
  <%= link_to 'Add a New Person', new_person_path(@person), class: 'btn btn-primary' %>
  
  <br>
  <br>

  <table class="table table-striped table-responsive">
    <%= form_with model: @person, remote: true do |form| %>
      <thead>
        <tr>
          <th>ID</th>
          <th>Salutation</th>
          <th>First Name</th>
          <th>Middle Name</th>
          <th>Last Name</th>
          <th>SSN</th>
          <th>Birth Date</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @people.each do |person| %>
          <tr>
            <td><%= person.id %></td>
            <td><%= person.salutation %></td>
            <td><%= person.first_name %></td>
            <td><%= person.middle_name %></td>
            <td><%= person.last_name %></td>
            <td><%= person.ssn %></td>
            <td><%= person.birth_date %></td>
            <td>
              <div class="btn-group" role="group" aria-label="Address Actions">
                <%= link_to 'Edit', edit_person_path(person), class: 'btn btn-sm btn-primary  mr-1' %>
                <%= button_to 'Delete', person, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
              </div>
            </td>
            <td>
            <%= link_to 'Show More Details', person, class: 'btn btn-sm btn-secondary' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
</div>
